@model Lexvor.Models.AdminViewModels.ChangePlanTypeViewModel
@{
    ViewData["Title"] = "Change Plan Type";
    Layout = "_AdminLayout";
}
<ul class="list-group media-list media-list-stream mb-4">
    <li class="media list-group-item p-4">
        <div class="media-body">
            <div class="row">
                <form asp-action="ChangePlanType">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="UserPlan.Id" class="form-control" />
                        <input type="hidden" asp-for="UserPlan.PlanTypeId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPlanTypeId" class="control-label"></label>
                        <select asp-for="NewPlanTypeId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.PlanTypes, "Id", "Name"))"></select>
                    </div>
                    <div class="form-group">
                        <p>Changing a User's Plan Type will only change it in this backend and give them access to Devices under those plans. It will not update their Stripe subscription.</p>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Change" class="btn btn-success clickable" />
                    </div>
                </form>
            </div>
        </div>
    </li>
</ul>
@section scripts {
    <script>
    </script>
}