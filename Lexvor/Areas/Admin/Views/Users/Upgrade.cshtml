@model Lexvor.Models.AdminViewModels.UpgradeViewModel
@{
    ViewData["Title"] = "Upgrade User Plan";
    Layout = "_AdminLayout";
}
<ul class="list-group media-list media-list-stream mb-4">
    <li class="media list-group-item p-4">
        <div class="media-body">
            <div class="row">
                <form asp-action="Upgrade">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <p>User will be upgraded at the end of their current month.</p>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="UserPlan.Id" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="UpgradePlanId" class="control-label"></label>
                        <select asp-for="UpgradePlanId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.PlanTypes, "Id", "Name"))"></select>
                        <span asp-validation-for="UpgradePlanId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Monthly" class="control-label"></label>
                        <input asp-for="Monthly" class="form-control" />
                        <span asp-validation-for="Monthly" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="DisableAds" class="form-control" /> Disable Ads? Will ad $5 per month to cost.
                        <span asp-validation-for="DisableAds" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Upgrade" class="btn btn-success clickable" />
                    </div>
                </form>
            </div>
        </div>
    </li>
</ul>
@section scripts {
    <script>
    </script>
}