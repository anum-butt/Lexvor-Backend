@model Lexvor.Models.HomeViewModels.ChangePasswordViewModel

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4>Change Password</h4>
            </div>
            <div class="card-body">
                <form role="form" method="post" asp-action="ChangePassword">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="OldPassword" class="control-label"></label>
                        <input type="password" asp-for="OldPassword" class="form-control" placeholder="Old Password" />
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label"></label>
                        <input type="password" asp-for="NewPassword" class="form-control" placeholder="New Password" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm New Password" />
                    </div>
                    <div class="form-group mb-5">
                        <button type="submit" class="btn btn-primary clickable">Change Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>